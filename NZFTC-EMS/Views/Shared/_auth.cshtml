<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
          rel="stylesheet"
          crossorigin="anonymous">

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/5c09730e7a.js" crossorigin="anonymous"></script>

    <!-- Temp: static title (Razor title commented out for now) -->
    <!-- <title>NZFT | @ViewData["Title"]</title> -->
    <title>NZFTC | @ViewData["Title"]</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100..900;1,100..900&display=swap"
          rel="stylesheet">

    <!-- Shared site CSS (navbar, hero, etc.) -->
    <link rel="stylesheet" href="~/css/landing-page-stylesheet.css" asp-append-version="true" />

    <!-- Auth-only CSS -->
    <link rel="stylesheet" href="~/css/authentication.css" asp-append-version="true" />
</head>

<body class="auth-page">
    <!-- =========================
         NAVBAR
    ========================== -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <!-- LOGO -->
                <a class="logo navbar-brand nav_brand" href="@Url.Action("Index", "Website")">
                    <!-- Desktop + Tablet logo -->
                    <img src="~/lib/img/logo-full.png"
                         alt="NZFTC EMS Logo Full"
                         class="logo-full d-none d-md-block">

                    <!-- Mobile icon logo -->
                    <img src="~/lib/img/logo-icon.png"
                         alt="NZFTC Logo Icon"
                         class="logo-icon d-block d-md-none">
                </a>

                <!-- MOBILE TOGGLER -->
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- NAV LINKS -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto navbar_nav">
                        <li class="nav-item nav_item">
                            <a class="nav-link nav_link" href="@Url.Action("Index", "Website")#home">HOME</a>
                        </li>
                        <li class="nav-item nav_item">
                            <a class="nav-link nav_link" href="@Url.Action("Index", "Website")#overview">OVERVIEW</a>
                        </li>
                        <li class="nav-item nav_item">
                            <a class="nav-link nav_link" href="@Url.Action("Index", "Website")#support">SUPPORT</a>
                        </li>
                        <li class="nav-item nav_item d-flex align-items-center mt-3 mt-lg-0">
                            <button type="button"
                                    class="btn login-outline-btn"
                                    onclick="location.href='@Url.Action("Authentication", "Website")'">
                                <i class="fa-solid fa-user"></i>
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main area – flex child that will center the login shell -->
    <main>
        @RenderBody()
    </main>

    @RenderSection("Scripts", required: false)

    <!-- =========================
         FOOTER
    ========================== -->
    <footer>
        <div class="footer-bg text-center py-3 text-white">
            <small>© 2025 NZFTC. All rights reserved.</small>
        </div>
    </footer>

    <!-- Scroll-to-top button (optional, fine if visible) -->
    <button id="scrollTopBtn" class="scroll-top-btn" type="button">
        <i class="fa-solid fa-arrow-up"></i>
    </button>

    <!-- =========================
         SCRIPTS
    ========================== -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>

    <script src="/js/navbar.js" asp-append-version="true"></script>
    <script src="/js/reveal-on-scroll.js" asp-append-version="true"></script>
    <script src="/js/to-top.js" asp-append-version="true"></script>
</body>
</html>
