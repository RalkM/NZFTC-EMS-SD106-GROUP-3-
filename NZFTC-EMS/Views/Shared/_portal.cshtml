@using Microsoft.AspNetCore.Http
@{
    var role = Context.Session.GetString("Role") ?? "Employee";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/5c09730e7a.js" crossorigin="anonymous"></script>
    <title>NZFTC | @ViewData["Title"]</title>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/portal-StyleSheet.css" asp-append-version="true" />
</head>

    <body>
        <header class="border-right">
                @await Html.PartialAsync(role == "Admin" ? "_portal_adminNav" : "_portal_employeeNav")
        </header>

        <!-- FIXED CONTENT WRAPPER -->
        <main class="page-content">
            @RenderBody()
        </main>
        </div>

        @RenderSection("Scripts", required: false)

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/_portal.js"></script>
    </body>
</html>
