@model NZFTC_EMS.Models.employee_model
@{
    Layout = ViewData["Layout"]?.ToString();
    ViewData["Title"] = "Confirm Delete";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

<div class="container py-5" style="max-width: 700px;">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Delete Employee</h4>
        </div>
        <div class="card-body">
            <p class="text-danger fw-semibold">
                Are you sure you want to delete this employee? This action cannot be undone.
            </p>

            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.full_name</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.email</dd>

                <dt class="col-sm-3">Department</dt>
                <dd class="col-sm-9">@Model.department</dd>

                <dt class="col-sm-3">Role</dt>
                <dd class="col-sm-9">@Model.role</dd>
            </dl>

            <form asp-action="Delete" asp-route-id="@Model.id" method="post" class="mt-4 d-flex gap-2">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Yes, delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    Cancel
                </a>
            </form>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

