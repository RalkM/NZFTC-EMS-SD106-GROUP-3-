@model NZFTC_EMS.Models.employee_model

@{
    // use the same layout your controller is already setting:
    // ViewData["Layout"] = "~/Views/Shared/_portal.cshtml";
    Layout = ViewData["Layout"]?.ToString();
    ViewData["Title"] = "Employee Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0 fw-bold">Employee Details</h3>
        <div class="d-flex gap-2">
            <a asp-controller="employee_management"
               asp-action="Edit"
               asp-route-id="@Model.id"
               class="btn btn-primary">
                <i class="bi bi-pencil-square"></i> Edit
            </a>

            <a asp-controller="employee_management"
               asp-action="Index"
               class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    @* safety check *@
    @if (Model == null)
    {
        <div class="alert alert-danger">Employee not found.</div>
    }
    else
    {
        <div class="row g-4">
            <!-- Personal Details -->
            <div class="col-lg-6">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-light fw-semibold">
                        Personal Details
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Full Name</dt>
                            <dd class="col-sm-8">@Model.full_name</dd>

                            <dt class="col-sm-4">Email</dt>
                            <dd class="col-sm-8">@Model.email</dd>

                            <dt class="col-sm-4">Phone</dt>
                            <dd class="col-sm-8">@Model.phone</dd>

                            <dt class="col-sm-4">Address</dt>
                            <dd class="col-sm-8">@Model.address</dd>
                        </dl>
                    </div>
                </div>
            </div>

            <!-- Employment -->
            <div class="col-lg-6">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-light fw-semibold">
                        Employment
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Department</dt>
                            <dd class="col-sm-8">@Model.department</dd>

                            <dt class="col-sm-4">Role</dt>
                            <dd class="col-sm-8">@Model.role</dd>

                            <dt class="col-sm-4">Basic Pay</dt>
                            <dd class="col-sm-8">
                                @if (Model.basic_pay.HasValue)
                                {
                                    @Model.basic_pay.Value.ToString("C0")
                                    // or: @($"{Model.basic_pay.Value:C0}")
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </dd>



                            <dt class="col-sm-4">Start Date</dt>
                            <dd class="col-sm-8">
                                @if (Model.start_date != null)
                                {
                                    @Model.start_date?.ToString("dd MMM yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>

            <!-- Contact / Emergency -->
            <div class="col-lg-6">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-light fw-semibold">
                        Contact Information
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Email</dt>
                            <dd class="col-sm-8">@Model.email</dd>

                            <dt class="col-sm-4">Phone</dt>
                            <dd class="col-sm-8">@Model.phone</dd>

                            <dt class="col-sm-4">Address</dt>
                            <dd class="col-sm-8">@Model.address</dd>
                        </dl>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-light fw-semibold">
                        Emergency Contact
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Name</dt>
                            <dd class="col-sm-8">@Model.emergency_contact_name</dd>

                            <dt class="col-sm-4">Relationship</dt>
                            <dd class="col-sm-8">@Model.emergency_contact_relationship</dd>

                            <dt class="col-sm-4">Phone</dt>
                            <dd class="col-sm-8">@Model.emergency_contact_phone</dd>

                            <dt class="col-sm-4">Email</dt>
                            <dd class="col-sm-8">@Model.emergency_contact_email</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

