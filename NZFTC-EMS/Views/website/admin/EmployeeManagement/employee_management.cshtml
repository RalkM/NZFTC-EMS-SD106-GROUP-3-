@model IEnumerable<NZFTC_EMS.Models.employee_model>

@{
    Layout = ViewData["Layout"]?.ToString();
    ViewData["Title"] = "Employee Management";

    // keep these so the UI remembers filters
    var q = ViewBag.Search as string;
    var dept = ViewBag.Department as string ?? "All";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container-fluid py-4">
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["msg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0 fw-bold text-primary">Employee Management</h3>
        <div class="d-flex gap-2">

            <!-- Add Employee -->
            <a asp-controller="employee_management"
               asp-action="Create"
               class="btn btn-primary">
                <i class="bi bi-person-plus"></i> Add Employee
            </a>
        </div>
    </div>

    <!-- Search and Filters -->
    <form method="get" class="row g-2 mb-4 align-items-center">
        <div class="col-md-4">
            <input name="q"
                   class="form-control"
                   placeholder="Search employee name or email..."
                   value="@q" />
        </div>
        <div class="col-md-3">
            <select name="department" class="form-select">
                <option value="All" selected="@(dept == "All")">All Departments</option>
                <option value="HR" selected="@(dept == "HR")">HR</option>
                <option value="Finance" selected="@(dept == "Finance")">Finance</option>
                <option value="IT" selected="@(dept == "IT")">IT</option>
                <option value="Marketing" selected="@(dept == "Marketing")">Marketing</option>
            </select>
        </div>
        <div class="col-md-2">
            <button class="btn btn-outline-primary w-100" type="submit">
                <i class="bi bi-search"></i> Filter
            </button>
        </div>
    </form>

    <!-- Employee Table -->
    <div class="table-responsive shadow-sm">
        <table class="table table-bordered align-middle text-center">
            <thead class="table-primary">
                <tr>
                    <th>ID</th>
                    <th>Full Name</th>
                    <th>Role</th>
                    <th>Department</th>
                    <th>Email</th>
                    <th>Basic Pay</th>
                    <th style="width:150px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var emp in Model)
                    {
                        <tr>
                            <td>@emp.id</td>
                            <td>@emp.full_name</td>
                            <td>@emp.role</td>
                            <td>@emp.department</td>
                            <td>@emp.email</td>
                            <td>@emp.basic_pay</td>
                            <td>
                                <a asp-controller="employee_management"
                                   asp-action="details"
                                   asp-route-id="@emp.id"
                                   class="btn btn-outline-secondary btn-sm">View
                                </a>

                                <a asp-controller="employee_management"
                                   asp-action="Edit"
                                   asp-route-id="@emp.id"
                                   class="btn btn-warning btn-sm mb-1">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-controller="employee_management"
                                   asp-action="delete"
                                   asp-route-id="@emp.id"
                                   class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </a>

                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-muted">No employees found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
