@using NZFTC_EMS.Data.Entities
@model CalendarEvent

@{
    Layout = ViewData["Layout"]?.ToString() ?? "~/Views/Shared/_portal.cshtml";
    ViewData["Title"] = "Add Event";
}

<link rel="stylesheet" href="~/css/calendar.css" asp-append-version="true" />

<div class="page-container">

    <!-- HEADER -->
    <div class="header-row d-flex justify-content-between align-items-center mb-3">
        <h2 class="page-title fw-bold">Add Event</h2>

        <a asp-controller="calendar"
           asp-action="UserCalendar"
           asp-route-month="@Model.Start.Month"
           asp-route-year="@Model.Start.Year"
           class="btn btn-secondary">
            Back to Calendar
        </a>
    </div>

    <!-- CARD -->
    <div class="card shadow-sm border-0 p-4">

        <!-- Header section -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h5 class="fw-semibold mb-1 text-uppercase">Create Event</h5>
                <p class="text-muted small mb-0">
                    Add an event visible for all employees.
                </p>
            </div>

            <div class="pill-date d-flex align-items-center">
                <span class="pill-dot"></span>
                <span>@Model.Start.ToString("ddd, dd MMM yyyy")</span>
            </div>
        </div>

        <!-- FORM -->
        <form asp-controller="calendar" asp-action="AdminCreate" method="post" class="row g-3">
            @Html.AntiForgeryToken()

            <!-- Title -->
            <div class="col-12">
                <label asp-for="Title" class="form-label fw-semibold"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="col-12">
                <label asp-for="Description" class="form-label fw-semibold"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Start -->
            <div class="col-md-6">
                <label asp-for="Start" class="form-label fw-semibold">Start</label>
                <input asp-for="Start" type="datetime-local" class="form-control" />
                <span asp-validation-for="Start" class="text-danger"></span>
            </div>

            <!-- End -->
            <div class="col-md-6">
                <label asp-for="End" class="form-label fw-semibold">End</label>
                <input asp-for="End" type="datetime-local" class="form-control" />
                <span asp-validation-for="End" class="text-danger"></span>
            </div>

            <!-- Event Type -->
            <div class="col-md-6">
                <label asp-for="EventType" class="form-label fw-semibold">Event Type</label>
                <select asp-for="EventType" class="form-select"
                        asp-items="Html.GetEnumSelectList<CalendarEventType>()"></select>
                <span asp-validation-for="EventType" class="text-danger"></span>
            </div>

            <!-- BUTTONS -->
            <div class="col-12 d-flex justify-content-end gap-2 mt-3">
                <a asp-controller="calendar"
                   asp-action="UserCalendar"
                   asp-route-month="@Model.Start.Month"
                   asp-route-year="@Model.Start.Year"
                   class="btn btn-secondary">
                    Cancel
                </a>

                <button type="submit" class="btn btn-primary">
                    Save Event
                </button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


