@using NZFTC_EMS.Data.Entities
@model Employee

@{
    Layout = "~/Views/Shared/_portal.cshtml";
    ViewData["Title"] = "Delete Employee";
}

<link rel="stylesheet" href="~/css/employee.css" asp-append-version="true" />

<div class="page-container">

    <div class="header-row d-flex justify-content-between align-items-center mb-3">
        <h2 class="page-title fw-bold mb-0">Delete Employee</h2>
    </div>

    <div class="alert alert-warning danger-card mb-3">
        Are you sure you want to delete this employee?
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title mb-2">@($"{Model.FirstName} {Model.LastName}")</h5>
            <p class="card-text mb-0">
                <strong>Email:</strong> @Model.Email<br />
                <strong>Role:</strong> @Model.Role<br />
                <strong>Department:</strong> @Model.Department<br />
                <strong>Basic Pay:</strong>
                @if (Model.BasicPay.HasValue)
                {
                    @Model.BasicPay.Value.ToString("C2")
                }
            </p>
        </div>
    </div>

    <form asp-controller="employee_management"
          asp-action="DeleteConfirmed"
          asp-route-id="@Model.EmployeeId"
          method="post">
        @Html.AntiForgeryToken()

        <div class="delete-actions">
            <button type="submit" class="btn ems-btn-danger">
                Yes, delete
            </button>

            <a asp-controller="employee_management"
               asp-action="Index"
               class="btn ems-btn-secondary">
                Cancel
            </a>
        </div>
    </form>

</div>
