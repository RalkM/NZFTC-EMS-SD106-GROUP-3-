@using NZFTC_EMS.Data.Entities
@model Employee

@{
    Layout = "~/Views/Shared/_portal.cshtml";
    ViewData["Title"] = "Delete Employee";
}


<h2>Delete Employee</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this employee?
</div>

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">@($"{Model.FirstName} {Model.LastName}")</h5>
        <p class="card-text">
            <strong>Email:</strong> @Model.Email<br />
            <strong>Role:</strong> @Model.Role<br />
            <strong>Department:</strong> @Model.Department<br />
            <strong>Basic Pay:</strong>
            @if (Model.BasicPay.HasValue)
            {
                @Model.BasicPay.Value.ToString("C2")
            }
        </p>
    </div>
</div>

<form asp-controller="employee_management"
      asp-action="DeleteConfirmed"
      asp-route-id="@Model.EmployeeId"
      method="post">
    @Html.AntiForgeryToken()

    <button type="submit" class="btn btn-danger">Yes, delete</button>
    <a asp-controller="employee_management"
       asp-action="Index"
       class="btn btn-secondary">
        Cancel
    </a>
</form>
