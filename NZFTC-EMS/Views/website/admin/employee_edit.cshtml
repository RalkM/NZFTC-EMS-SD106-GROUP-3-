@using NZFTC_EMS.Data.Entities
@model Employee

@{
    Layout = "~/Views/Shared/_portal.cshtml";
    ViewData["Title"] = "Edit Employee";
}

<h2>Edit Employee</h2>

<form asp-action="Edit" asp-controller="employee_management" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="EmployeeId" />

    <!-- A. PERSONAL DETAILS -->
    <h4 class="mt-3 mb-2">Personal Details</h4>
    <hr />

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="FirstName" class="form-label"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Phone" class="form-label"></label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Address" class="form-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="col-md-3 mb-3">
            <label asp-for="Birthday" class="form-label"></label>
            <input asp-for="Birthday" class="form-control" type="date" />
            <span asp-validation-for="Birthday" class="text-danger"></span>
        </div>
        <div class="col-md-3 mb-3">
            <label asp-for="Gender" class="form-label"></label>
            <input asp-for="Gender" class="form-control" />
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
    </div>

    <!-- B. JOB DETAILS -->
    <h4 class="mt-4 mb-2">Job Details</h4>
    <hr />

    <div class="row">
        <div class="col-md-4 mb-3">
            <label class="form-label">Department</label>
            <select asp-for="Department"
                    class="form-select"
                    asp-items="ViewBag.Departments">
            </select>
        </div>

        <div class="col-md-4 mb-3">
            <label class="form-label">Job Title</label>
            <select asp-for="JobTitle"
                    class="form-select"
                    asp-items="ViewBag.JobTitles">
            </select>
        </div>

        <div class="col-md-4 mb-3">
            <label class="form-label">Pay Frequency</label>
            <select asp-for="PayFrequency"
                    class="form-select"
                    asp-items="ViewBag.PayFrequencies">
            </select>
        </div>

        <div class="col-md-4 mb-3">
            <label asp-for="StartDate" class="form-label"></label>
            <input asp-for="StartDate" class="form-control" type="date" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
    </div>

    <!-- C. PAY GRADE DETAILS (read-only) -->
    <h4 class="mt-4 mb-2">Pay Grade Details</h4>
    <hr />

    <div class="row">
        <div class="col-md-4 mb-3">
            <label class="form-label">Pay Grade (auto)</label>
            <input class="form-control" value="@Model.PayGradeId" readonly />
        </div>
        <div class="col-md-4 mb-3">
            <label class="form-label">Basic Pay (from Pay Grade)</label>
            <input class="form-control"
                   value="@(Model.BasicPay.HasValue ? Model.BasicPay.Value.ToString("C2") : "—")"
                   readonly />
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="employee_management"
           asp-action="Index"
           class="btn btn-secondary ms-2">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
