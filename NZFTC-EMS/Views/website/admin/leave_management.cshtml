@model IEnumerable<NZFTC_EMS.Models.leave_request_model>

@{
    Layout = ViewData["Layout"]?.ToString();
    ViewData["Title"] = "Leave Management";
    var q = ViewBag.Search as string;
    var status = ViewBag.Status as string ?? "All";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/portal-StyleSheet.css" />

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0 fw-bold">Leave Management</h3>
        <div class="d-flex gap-2">
            <a href="/leave_management/seed-test" class="btn btn-secondary">Seed Test Data</a>
            <a href="/leave_management/export-excel" class="btn btn-success">Export CSV</a>
            <a href="/leave_management/export-pdf" class="btn btn-danger">Export TXT</a>
        </div>
    </div>

    <!-- Filters -->
    <form method="get" class="row g-2 mb-4 align-items-center">
        <div class="col-md-4">
            <input name="q" class="form-control" placeholder="Search employee name..." value="@q" />
        </div>
        <div class="col-md-3">
            <select name="status" class="form-select">
                <option value="All" selected="@(status == "All")">All</option>
                <option value="Pending" selected="@(status == "Pending")">Pending</option>
                <option value="Approved" selected="@(status == "Approved")">Approved</option>
                <option value="Declined" selected="@(status == "Declined")">Declined</option>
            </select>
        </div>
        <div class="col-md-2">
            <button class="btn btn-outline-primary w-100" type="submit">Filter</button>
        </div>
    </form>

    <!-- Leave Requests Table -->
    <div class="table-responsive shadow-sm">
        <table class="table table-bordered align-middle text-center">
            <thead class="table-primary">
                <tr>
                    <th>ID</th>
                    <th>Employee</th>
                    <th>Leave Type</th>
                    <th>Period</th>
                    <th>Reason</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var leave in Model)
                    {
                        <tr>
                            <td>@leave.leave_id</td>
                            <td>@leave.employee_name</td>
                            <td>@leave.leave_type</td>
                            <td>@($"{leave.start_date:dd MMM} - {leave.end_date:dd MMM yyyy}")</td>
                            <td>@leave.reason</td>
                            <td>
                                <span class="badge bg-@(leave.status == "Approved" ? "success" : leave.status == "Declined" ? "danger" : "warning text-dark")">
                                    @leave.status
                                </span>
                            </td>
                            <td>
                                <form asp-action="UpdateStatus" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@leave.leave_id" />
                                    <button name="status" value="Approved" class="btn btn-success btn-sm">Approve</button>
                                    <button name="status" value="Declined" class="btn btn-danger btn-sm">Decline</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-muted">No leave requests found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
