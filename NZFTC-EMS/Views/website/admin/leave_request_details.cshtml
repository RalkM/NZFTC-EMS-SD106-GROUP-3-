@using NZFTC_EMS.Models.ViewModels.Leave
@model AdminLeaveRequestVM
@{
    Layout = "~/Views/Shared/_portal.cshtml";
}

<div class="page-container">

    <!-- PAGE HEADER -->
    <div class="header-row d-flex justify-content-between align-items-center mb-4">
        <h2 class="page-title fw-bold">Leave Request Details</h2>

       <a asp-controller="LeaveManagement"
   asp-action="LeaveManagement"
   class="btn btn-secondary px-4">
    Back
</a>

    </div>

    <!-- EMPLOYEE INFORMATION -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header text-white fw-semibold"
             style="background-color:#1E4DB7; border-radius:6px 6px 0 0;">
            Employee Information
        </div>

        <div class="card-body row g-3">
            <div class="col-md-6">
                <label class="text-muted small mb-1">Employee Name</label>
                <div class="fw-bold">@Model.EmployeeName</div>
            </div>

            <div class="col-md-6">
                <label class="text-muted small mb-1">Department</label>
                <div>@Model.Department</div>
            </div>
        </div>
    </div>

    <!-- LEAVE DETAILS -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header text-white fw-semibold"
             style="background-color:#1E4DB7; border-radius:6px 6px 0 0;">
            Leave Details
        </div>

        <div class="card-body row g-3">

            <div class="col-md-4">
                <label class="text-muted small mb-1">Leave Type</label>
                <div class="fw-bold">@Model.LeaveType</div>
            </div>

            <div class="col-md-4">
                <label class="text-muted small mb-1">Date Range</label>
                <div>
                    @Model.StartDate.ToShortDateString() - @Model.EndDate.ToShortDateString()
                </div>
            </div>

            <div class="col-md-4">
                <label class="text-muted small mb-1">Requested At</label>
                <div>@Model.RequestedAt.ToString("f")</div>
            </div>

            <div class="col-12">
                <label class="text-muted small mb-1">Reason</label>
                <div class="p-3 bg-light rounded border">
                    @Model.Reason
                </div>
            </div>

            <div class="col-md-4">
                <label class="text-muted small mb-1">Status</label>
                <div>
                    @if (Model.Status == NZFTC_EMS.Data.Entities.LeaveStatus.Pending)
                    {
                        <span class="badge bg-warning text-dark">Pending</span>
                    }
                    else if (Model.Status == NZFTC_EMS.Data.Entities.LeaveStatus.Approved)
                    {
                        <span class="badge bg-success">Approved</span>
                    }
                    else if (Model.Status == NZFTC_EMS.Data.Entities.LeaveStatus.Rejected)
                    {
                        <span class="badge bg-danger">Rejected</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Cancelled</span>
                    }
                </div>
            </div>

        </div>
    </div>

    <!-- LEAVE BALANCES -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header text-white fw-semibold"
             style="background-color:#1E4DB7; border-radius:6px 6px 0 0;">
            Leave Balances
        </div>

        <div class="card-body row g-3">

            <div class="col-md-6">
                <label class="text-muted small mb-1">Annual Remaining</label>
                <div class="fw-bold">@Model.AnnualRemaining days</div>
            </div>

            <div class="col-md-6">
                <label class="text-muted small mb-1">Sick Remaining</label>
                <div class="fw-bold">@Model.SickRemaining days</div>
            </div>

        </div>
    </div>

    <!-- ACTION BUTTONS -->
    @if (Model.Status == NZFTC_EMS.Data.Entities.LeaveStatus.Pending)
    {
        <div class="d-flex gap-3">

           <a asp-controller="LeaveManagement"
   asp-action="ApproveLeave"
   asp-route-id="@Model.LeaveRequestId"
   class="btn btn-success px-4">
    Approve
</a>


            <!-- Open Reject Modal -->
            <button class="btn btn-danger px-4"
                    data-bs-toggle="modal"
                    data-bs-target="#rejectModal">
                Reject
            </button>

        </div>
    }

</div>


<!-- REJECT MODAL -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content border-0">

            <form asp-controller="LeaveManagement"
      asp-action="RejectLeave"
      asp-route-id="@Model.LeaveRequestId"
      method="post">


                <div class="modal-header text-white" style="background-color:#1E4DB7;">
                    <h5 class="modal-title">Reject Leave</h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <label class="form-label fw-semibold">Reason for Rejection</label>
                    <textarea name="comment" class="form-control" rows="3" required></textarea>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger px-4">Reject</button>
                </div>

            </form>

        </div>
    </div>
</div>

