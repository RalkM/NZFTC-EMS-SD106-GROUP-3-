@using NZFTC_EMS.Data.Entities
@model PayGrade

@{
    Layout = "~/Views/Shared/_portal.cshtml";
    ViewData["Title"] = "Edit Pay Grade";
}

<link rel="stylesheet" href="~/css/paygrade.css" asp-append-version="true" />

<div class="page-container">

    <!-- HEADER -->
    <div class="header-row d-flex justify-content-between align-items-center mb-4">
        <h2 class="page-title fw-bold mb-0">Edit Pay Grade</h2>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">

            <form asp-controller="paygrade_management"
                  asp-action="Edit"
                  asp-route-id="@Model.PayGradeId"
                  method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="PayGradeId" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-semibold"></label>
                    <textarea asp-for="Description"
                              class="form-control"
                              rows="2"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BaseRate" class="form-label fw-semibold"></label>
                    <input asp-for="BaseRate"
                           class="form-control"
                           type="number"
                           step="0.01" />
                    <span asp-validation-for="BaseRate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RateType" class="form-label fw-semibold"></label>
                    @Html.DropDownListFor(
                        m => m.RateType,
                        Html.GetEnumSelectList<RateType>(),
                        "Select rate type",
                        new { @class = "form-select" })
                    <span asp-validation-for="RateType" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label fw-semibold"></label>
                </div>

                <div class="mt-4 d-flex gap-2">
                    <a asp-controller="paygrade_management"
                        asp-action="Index"
                        class="btn btn-secondary btn-cancel px-4">
                        Cancel
                    </a>
  
                    <button type="submit" class="btn btn-primary">
                        Save changes
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

