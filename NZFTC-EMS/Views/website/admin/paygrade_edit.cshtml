@using NZFTC_EMS.Data.Entities
@model PayGrade

@{
    Layout = "~/Views/Shared/_portal.cshtml";
    ViewData["Title"] = "Edit Pay Grade";
}

<h2>Edit Pay Grade</h2>

<form asp-controller="paygrade_management"
      asp-action="Edit"
      asp-route-id="@Model.PayGradeId"
      method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="PayGradeId" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

     <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="2"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="BaseRate" class="form-label"></label>
        <input asp-for="BaseRate" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="BaseRate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="RateType" class="form-label"></label>
        @Html.DropDownListFor(
            m => m.RateType,
            Html.GetEnumSelectList<RateType>(),
            "Select rate type",
            new { @class = "form-select" })
        <span asp-validation-for="RateType" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>

    <div class="mt-3">
        <a asp-controller="paygrade_management"
           asp-action="Index"
           class="btn btn-secondary me-2">
            Cancel
        </a>
        <button type="submit" class="btn btn-primary">
            Save changes
        </button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
