@using NZFTC_EMS.Data.Entities
@model IEnumerable<PayGrade>

@{
    Layout = "~/Views/Shared/_portal.cshtml";
    ViewData["Title"] = "Pay Grade Management";
}

<h2 class="mb-3">Pay Grade Management</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        @if (TempData["msg"] != null)
        {
            <div class="alert alert-info mb-0">@TempData["msg"]</div>
        }
    </div>
    <a asp-controller="paygrade_management"
       asp-action="Create"
       class="btn btn-success">
        + Add Pay Grade
    </a>
</div>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Base Rate</th>
            <th>Rate Type</th>
            <th>Active</th>
            <th style="width: 160px;">Actions</th>
        </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Any())
    {
        foreach (var pg in Model)
        {
            <tr>
                <td>@pg.PayGradeId</td>
                <td>@pg.Name</td>
                <td>@pg.Description</td>
                <td>@pg.BaseRate.ToString("C2")</td>
                <td>@pg.RateType</td>
                <td>@(pg.IsActive ? "Yes" : "No")</td>
                <td>
                    <a asp-controller="paygrade_management"
                       asp-action="Edit"
                       asp-route-id="@pg.PayGradeId"
                       class="btn btn-sm btn-primary me-1">
                        Edit
                    </a>
                    <a asp-controller="paygrade_management"
                       asp-action="Delete"
                       asp-route-id="@pg.PayGradeId"
                       class="btn btn-sm btn-danger">
                        Delete
                    </a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="6" class="text-center text-muted">
                No pay grades defined yet.
            </td>
        </tr>
    }
    </tbody>
</table>
