@model List<NZFTC_EMS.Models.ViewModels.Payroll.PayrollPeriodVM>
@{
    Layout = "~/Views/Shared/_portal.cshtml";
}

<div class="page-container">

    <!-- HEADER -->
    <div class="header-row d-flex justify-content-between align-items-center mb-4">
        <h2 class="page-title fw-bold">Payroll Periods</h2>
        <a href="/PayrollManagement/CreatePeriod" class="btn btn-primary px-4">
            Create New Period
        </a>
    </div>

    <!-- MAIN CARD -->
    <div class="card shadow-sm border-0 table-card">

        <div class="card-header text-white fw-semibold"
             style="background-color:#1E4DB7; border-radius: 6px 6px 0 0;">
            Payroll Period List
        </div>

        <div class="table-responsive">
            <table class="table table-hover styled-table mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Period Code</th>
                        <th>Start</th>
                        <th>End</th>
                        <th>Status</th>
                        <th>Total Amount</th>
                        <th class="text-end"></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td>@p.PeriodCode</td>

                            <td>@p.PeriodStart.ToShortDateString()</td>

                            <td>@p.PeriodEnd.ToShortDateString()</td>

                            <td>
                                @if (p.Closed)
                                {
                                    <span class="badge bg-success">Closed</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Open</span>
                                }
                            </td>

                            <td>@p.TotalAmount?.ToString("C")</td>

                            <td class="text-end">

                                @* --- RUN BUTTON (ONLY WHEN OPEN) --- *@
                                @if (!p.Closed)
                                {
                                    <a class="btn btn-primary btn-sm me-1"
                                       href="/PayrollManagement/RunPayroll/@p.PayrollPeriodId">
                                        Run
                                    </a>
                                }

                                @* --- SUMMARY BUTTON (ALWAYS AVAILABLE) --- *@
                                <a class="btn btn-secondary btn-sm me-1"
                                   href="/PayrollManagement/ViewSummary/@p.PayrollPeriodId">
                                    Summary
                                </a>

                                @* --- FINALIZE/PAY BUTTONS --- *@
                                @if (!p.Closed)
                                {
                                    <a class="btn btn-success btn-sm"
                                       href="/PayrollManagement/FinalizePayroll/@p.PayrollPeriodId"
                                       onclick="return confirm('Are you sure? Finalizing locks this payroll.');">
                                        Finalize
                                    </a>
                                }
                                else
                                {
                                    <a class="btn btn-success btn-sm"
                                       href="/PayrollManagement/MarkPaid/@p.PayrollPeriodId">
                                        Mark Paid
                                    </a>
                                }

                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

</div>

@section Scripts {
    <script src="~/js/payroll_admin.js"></script>
}
