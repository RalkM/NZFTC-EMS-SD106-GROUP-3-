@{
    ViewData["Title"] = "Support Management";
    var q = ViewBag.Search as string;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="~/css/portal_admin_support.css" rel="stylesheet" />

<div class="gm-shell py-4">
  <h3 class="text-center mb-4">@ViewData["Title"]</h3>

  <form method="get" class="d-flex gap-2 mb-3 justify-content-center">
    <div class="input-group" style="max-width:380px">
      <span class="input-group-text">ðŸ”Ž</span>
      <input name="q" class="form-control" placeholder="Search by Name/ID" value="@q" />
      <button class="btn btn-outline-secondary" type="submit">Search</button>
      <a class="btn btn-outline-dark" href="@Url.Action("Index","Grievances")">Clear</a>
    </div>
  </form>

  <div class="row gm-card">
    <!-- Left: table -->
    <div class="col-7 p-3 gm-left">
      <div class="gm-head mb-2">Grievance Summary</div>
      <div class="table-responsive">
        <table class="table gm-table align-middle" id="grid">
          <thead>
            <tr>
              <th style="width:80px">ID</th>
              <th>Full Name</th>
              <th>Subject</th>
              <th style="width:170px">Date Submitted</th>
            </tr>
          </thead>
          <tbody>
     
              <tr data-id="Id">
                <td>Id</td>
                <td>EmployeeFullName</td>
                <td>Subject</td>
                <td>DateSubmitted.ToLocalTime().ToString("dd MMM yyyy, HH:mm")</td>
              </tr>
       
          </tbody>
        </table>
      </div>
    </div>

    <!-- Right: details panel -->
    <div class="col-5 p-3">
      <div class="gm-panel-title">Support Request Details</div>

      <dl class="row mb-2">
        <dt class="col-5 gm-label">Employee:</dt>
        <dd class="col-7" id="d-emp">â€”</dd>

        <dt class="col-5 gm-label">Subject:</dt>
        <dd class="col-7" id="d-sub">â€”</dd>

        <dt class="col-5 gm-label">Date Submitted:</dt>
        <dd class="col-7" id="d-date">â€”</dd>
      </dl>

      <div class="mb-2">
        <textarea id="d-msg" class="form-control gm-textarea" readonly placeholder="Message will appear here"></textarea>
      </div>

      <form method="post" asp-action="Respond" class="mb-2">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" id="resp-id" />
        <label class="gm-label mb-1">Admin Response:</label>
        <textarea name="adminResponse" id="resp-text" class="form-control gm-textarea" placeholder="Type your response here..."></textarea>

        <div class="d-flex gap-2 mt-3">
          <button type="submit" class="btn btn-primary">Send</button>

          <form method="post" asp-action="MarkResolved" class="d-inline">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" id="res-id" />
            <button type="submit" class="btn btn-outline-secondary">Mark Resolved</button>
          </form>

          <a class="btn btn-outline-dark ms-auto" href="@Url.Action("Index")">Close</a>
        </div>
      </form>
    </div>
  </div>
</div>

<script href="~/js/support_managment.js"></script>

