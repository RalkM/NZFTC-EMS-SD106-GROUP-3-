@using NZFTC_EMS.Data.Entities
@model CalendarEvent

@{
    Layout = ViewData["Layout"]?.ToString() ?? "~/Views/Shared/_portal.cshtml";
    ViewData["Title"] = "Edit To-Do";
}

<link rel="stylesheet" href="~/css/calendar.css" asp-append-version="true" />

<div class="page-container">

    <!-- HEADER -->
    <div class="header-row d-flex justify-content-between align-items-center mb-3">
        <h2 class="page-title fw-bold">My Calendar – Edit To-Do</h2>

        <a asp-controller="calendar"
           asp-action="UserCalendar"
           asp-route-month="@Model.Start.Month"
           asp-route-year="@Model.Start.Year"
           class="btn btn-secondary">
            Back to Calendar
        </a>
    </div>

    <!-- CARD -->
    <div class="card shadow-sm border-0 p-4">

        <!-- Intro row -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h5 class="fw-semibold mb-1 text-uppercase">Edit To-Do</h5>
                <p class="text-muted small mb-0">
                    Update or remove this personal reminder.
                </p>
            </div>

            <div class="pill-date d-flex align-items-center">
                <span class="pill-dot"></span>
                <span>@Model.Start.ToString("ddd, dd MMM yyyy")</span>
            </div>
        </div>

        <!-- EDIT FORM -->
        <form asp-controller="calendar"
              asp-action="EmployeeEditTodo"
              method="post"
              class="row g-3">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <!-- Title -->
            <div class="col-12">
                <label asp-for="Title" class="form-label fw-semibold"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="col-12">
                <label asp-for="Description" class="form-label fw-semibold"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Start -->
            <div class="col-md-6">
                <label asp-for="Start" class="form-label fw-semibold">Start</label>
                <input asp-for="Start" type="datetime-local" class="form-control" />
                <span asp-validation-for="Start" class="text-danger"></span>
            </div>

            <!-- End -->
            <div class="col-md-6">
                <label asp-for="End" class="form-label fw-semibold">End</label>
                <input asp-for="End" type="datetime-local" class="form-control" />
                <span asp-validation-for="End" class="text-danger"></span>
            </div>

            <!-- BUTTON ROW -->
            <div class="col-12 d-flex justify-content-between align-items-center mt-3">

                <!-- Left: Cancel / Save -->
                <div class="d-flex gap-2">
                    <a asp-controller="calendar"
                       asp-action="UserCalendar"
                       asp-route-month="@Model.Start.Month"
                       asp-route-year="@Model.Start.Year"
                       class="btn btn-secondary">
                        Cancel
                    </a>

                    <button type="submit" class="btn btn-primary">
                        Save Changes
                    </button>
                </div>
            </div>
        </form>

        <!-- DELETE FORM (separate, not nested) -->
        <div class="mt-4 text-end">
            <form asp-controller="calendar"
                  asp-action="EmployeeDeleteTodo"
                  method="post"
                  class="d-inline"
                  onsubmit="return confirm('Are you sure you want to delete this to-do?');">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />
                <input type="hidden" name="month" value="@Model.Start.Month" />
                <input type="hidden" name="year" value="@Model.Start.Year" />

                <button type="submit" class="btn btn-outline-danger">
                    Delete To-Do
                </button>
            </form>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

