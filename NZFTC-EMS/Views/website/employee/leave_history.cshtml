@using NZFTC_EMS.Models.ViewModels.Leave
@model List<LeaveHistoryVM>
@{
    Layout = "~/Views/Shared/_portal.cshtml";
        ViewData["Title"] = "Leave History";
}

<div class="page-container">

    <!-- HEADER -->
    <div class="header-row d-flex justify-content-between align-items-center mb-4">
        <h2 class="page-title fw-bold">My Leave History</h2>
    </div>

    <!-- ALERTS -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <!-- LEAVE HISTORY CARD -->
    <div class="card shadow-sm border-0">

        <div class="card-header text-white fw-semibold"
             style="background-color:#1E4DB7; border-radius:6px 6px 0 0;">
            Your Leave Requests
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle styled-table mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Type</th>
                        <th>Dates</th>
                        <th>Status</th>
                        <th>Reason</th>
                        <th>Requested At</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <!-- TYPE -->
                            <td class="fw-semibold">@item.LeaveType</td>

                            <!-- DATE RANGE -->
                            <td>
                                @item.StartDate.ToShortDateString()
                                –
                                @item.EndDate.ToShortDateString()
                            </td>

                            <!-- STATUS -->
                            <td>
                                @if (item.Status == NZFTC_EMS.Data.Entities.LeaveStatus.Approved)
                                {
                                    <span class="badge bg-success">Approved</span>
                                }
                                else if (item.Status == NZFTC_EMS.Data.Entities.LeaveStatus.Pending)
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }
                                else if (item.Status == NZFTC_EMS.Data.Entities.LeaveStatus.Rejected)
                                {
                                    <span class="badge bg-danger">Rejected</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Cancelled</span>
                                }
                            </td>

                            <!-- REASON -->
                            <td>@item.Reason</td>

                            <!-- REQUESTED -->
                            <td>@item.RequestedAt.ToShortDateString()</td>

                            <!-- CANCEL BTN -->
                            <td class="text-end">
                                @if (item.Status == NZFTC_EMS.Data.Entities.LeaveStatus.Pending)
                                {
                                    <a href="/leave_management/CancelLeave/@item.LeaveRequestId"
                                       class="btn btn-sm btn-danger px-3"
                                       onclick="return confirm('Cancel this leave request?');">
                                        Cancel
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>

    </div>

</div>
