@using NZFTC_EMS.Controllers
@model LeaveRequestFormVm

@{
    Layout = ViewData["Layout"]?.ToString();
    ViewData["Title"] = "File a Leave";
}

<link rel="stylesheet" href="~/css/portal-StyleSheet.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5" style="max-width:700px;">
    <h3 class="fw-bold mb-4">File a Leave Request</h3>
    <form asp-controller="leave_management" asp-action="File" method="post" class="row g-3">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-md-4">
        <label class="form-label">Leave Type</label>
        <input asp-for="LeaveType" class="form-control" />
        <span asp-validation-for="LeaveType" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label class="form-label">Start Date</label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label class="form-label">End Date</label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label class="form-label">Reason</label>
        <textarea asp-for="Reason" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Reason" class="text-danger"></span>
    </div>

    <div class="col-12 text-end">
        <button class="btn btn-primary">Submit</button>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
</div>
