@model IEnumerable<NZFTC_EMS.Models.payroll_model>
@{
    Layout = ViewData["Layout"]?.ToString();
    ViewData["Title"] = "Payslip History";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/portal-StyleSheet.css" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<div class="container mt-4">
    <h3 class="fw-bold text-center mb-4">Payslip History</h3>

    <div class="table-responsive shadow-sm">
        <table class="table table-bordered align-middle text-center">
            <thead class="table-primary">
                <tr>
                    <th>Period</th>
                    <th>Employee</th>
                    <th>Payment Date</th>
                    <th>Net Salary</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var p in Model)
                    {
                        <tr>
                            <td>@DateTime.Now.ToString("MMM yyyy")</td>
                            <td>@p.employee_name</td>
                            <td>@DateTime.Now.ToString("dd MMM yyyy")</td>
                            <td class="fw-bold text-success">$@p.net_salary.ToString("F2")</td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <button type="button"
                                            class="btn btn-info btn-sm text-white"
                                            data-bs-toggle="modal"
                                            data-bs-target="#payslipModal_@p.payroll_id">
                                        View
                                    </button>
                                    <a class="btn btn-sm btn-primary"
                                       href="@Url.Action("Download", "payroll_management", new { id = p.payroll_id })">
                                        Download
                                    </a>
                                </div>
                            </td>
                        </tr>

                        <!-- Payslip Modal -->
                        <div class="modal fade" id="payslipModal_@p.payroll_id" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered modal-lg">
                                <div class="modal-content">
                                    <div class="modal-header bg-primary text-white">
                                        <h5 class="modal-title">Payslip for @p.employee_name</h5>
                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="p-3">
                                            <div class="row mb-3">
                                                <div class="col-md-6">
                                                    <h6 class="fw-bold">Employee Name:</h6>
                                                    <p>@p.employee_name</p>
                                                </div>
                                                <div class="col-md-6">
                                                    <h6 class="fw-bold">Payment Date:</h6>
                                                    <p>@DateTime.Now.ToString("dd MMM yyyy")</p>
                                                </div>
                                            </div>

                                            <table class="table table-bordered text-center">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th>Description</th>
                                                        <th>Amount ($)</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td>Base Salary</td>
                                                        <td>@p.base_salary.ToString("F2")</td>
                                                    </tr>
                                                    <tr>
                                                        <td>Deductions</td>
                                                        <td class="text-danger">-@p.deductions.ToString("F2")</td>
                                                    </tr>
                                                    <tr class="table-success fw-bold">
                                                        <td>Net Salary</td>
                                                        <td>@p.net_salary.ToString("F2")</td>
                                                    </tr>
                                                </tbody>
                                            </table>

                                            <p class="mt-3 text-muted small">
                                                This is a system-generated payslip from NZFTC EMS Portal.
                                            </p>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <a href="@Url.Action("Download", "payroll_management", new { id = p.payroll_id })"
                                           class="btn btn-success">
                                            <i class="fa-solid fa-download"></i> Download CSV
                                        </a>
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <tr><td colspan="5" class="text-muted">No payslips available.</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>
