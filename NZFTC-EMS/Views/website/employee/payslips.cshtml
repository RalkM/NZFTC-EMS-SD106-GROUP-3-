@using NZFTC_EMS.Data.Entities
@model IEnumerable<EmployeePayrollSummary>

@{
    Layout = "~/Views/Shared/_portal.cshtml";

    // Order once so we can split latest vs history
    var ordered = (Model ?? Enumerable.Empty<EmployeePayrollSummary>())
        .OrderByDescending(s => s.GeneratedAt)
        .ToList();

    var latest  = ordered.FirstOrDefault();
    var history = ordered.Skip(1).ToList();
}

<link rel="stylesheet" href="~/css/payroll.css" asp-append-version="true" />

<div class="page-container payslip-wrapper">

    <!-- PAGE HEADER + HISTORY BUTTON -->
    <div class="d-flex justify-content-between align-items-center mb-3 print-hide">
        <div>
            <h2 class="fw-bold mb-0">My Payslips</h2>
            <div class="meta-text">
                View your current payslip and full history.
            </div>
        </div>

        <div>
            <!-- This button toggles the history table -->
            <button class="btn btn-outline-primary"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#payslipHistory"
                    aria-expanded="false"
                    aria-controls="payslipHistory">
                <i class="bi bi-clock-history me-1"></i>
                History
            </button>
        </div>
    </div>

    @if (!ordered.Any())
    {
        <div class="alert alert-info">
            You don’t have any payslips yet.
        </div>
    }
    else
    {
        <!-- CURRENT / LATEST PAYSLIP CARD -->
        if (latest != null)
        {
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <div class="subtitle">Current Payslip</div>
                        <div class="title-text">
                            @latest.PayrollRun?.PeriodStart.ToString("dd MMM yyyy")
                            –
                            @latest.PayrollRun?.PeriodEnd.ToString("dd MMM yyyy")
                        </div>
                    </div>
                    <div class="text-end">
                        <div class="meta-label">Net pay</div>
                        <div class="fs-4 fw-bold text-success">
                            @latest.NetPay.ToString("C2")
                        </div>
                        <div class="meta-text">
                            Generated @latest.GeneratedAt.ToString("dd MMM yyyy, h:mm tt")
                        </div>
                    </div>
                </div>

                <div class="payslip-body">
                    <div class="row mb-2">
                        <div class="col-md-4">
                            <div class="payslip-section-title">Employee Code</div>
                            <div class="payslip-section-value">
                                @latest.Employee?.EmployeeCode
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="payslip-section-title">Department</div>
                            <div class="payslip-section-value">
                                @latest.Employee?.Department
                            </div>
                        </div>
                        <div class="col-md-4 text-md-end mt-2 mt-md-0">
                            <a asp-controller="employee_payroll"
                               asp-action="Payslip"
                               asp-route-id="@latest.EmployeePayrollSummaryId "
                               class="btn btn-primary">
                                <i class="bi bi-file-earmark-text me-1"></i>
                                View full payslip
                            </a>
                        </div>
                    </div>

                    <div class="divider-soft"></div>

                    <div class="row">
                        <div class="col-sm-4">
                            <div class="meta-label">Pay rate</div>
                            <div class="payslip-section-value">
                                @latest.PayRate.ToString("C2") (Hourly)
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="meta-label">Total hours</div>
                            <div class="payslip-section-value">
                                @latest.TotalHours
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="meta-label">Gross pay</div>
                            <div class="payslip-section-value">
                                @latest.GrossPay.ToString("C2")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- HISTORY TABLE (OLDER PAYSLIPS) -->
        <div class="collapse" id="payslipHistory">

            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <div class="subtitle">Payslip History</div>
                        <div class="title-text">Previous pay periods</div>
                    </div>
                    <div class="meta-text d-none d-md-block">
                        Click a row’s <strong>View</strong> button to open that payslip.
                    </div>
                </div>

                <div class="card-body p-0">
                    @if (!history.Any())
                    {
                        <div class="p-3">
                            <span class="text-muted">
                                No older payslips yet – you only have the current one.
                            </span>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table payroll-table mb-0">
                                <thead>
                                    <tr>
                                        <th>Period</th>
                                        <th>Generated</th>
                                        <th class="text-end">Gross Pay</th>
                                        <th class="text-end">Net Pay</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var s in history)
                                    {
                                        <tr>
                                            <td>
                                                <div class="pay-period">
                                                    @s.PayrollRun?.PeriodStart.ToString("dd MMM yyyy")
                                                    –
                                                    @s.PayrollRun?.PeriodEnd.ToString("dd MMM yyyy")
                                                </div>
                                            </td>
                                            <td>
                                                <span class="meta-text">
                                                    @s.GeneratedAt.ToString("dd MMM yyyy, h:mm tt")
                                                </span>
                                            </td>
                                            <td class="text-end">
                                                @s.GrossPay.ToString("C2")
                                            </td>
                                            <td class="text-end">
                                                @s.NetPay.ToString("C2")
                                            </td>
                                            <td class="text-end">
                                                <a asp-controller="employee_payroll"
                                                   asp-action="Payslip"
                                                   asp-route-id="@s.EmployeePayrollSummaryId"
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-file-earmark-text me-1"></i>
                                                    View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>
