@using NZFTC_EMS.Data.Entities
@model Employee

@{
    Layout = "~/Views/Shared/_portal.cshtml";
    ViewData["Title"] = "Profile";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

<div class="container py-4">

    @if (TempData["msg"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["msg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row g-4 mb-4">
        <!-- LEFT: PROFILE SUMMARY -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <div class="rounded-circle overflow-hidden mx-auto" style="width:120px;height:120px;">
                            @if (!string.IsNullOrEmpty(Model.PhotoPath))
                            {
                                <img src="@Model.PhotoPath"
                                     alt="Profile photo"
                                     style="width:100%;height:100%;object-fit:cover;" />
                            }
                            else
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center w-100 h-100">
                                    <span class="text-muted">No photo</span>
                                </div>
                            }
                        </div>
                    </div>

                    <h5 class="mb-1">@Model.FullName</h5>
                    <p class="text-muted mb-0">
                        @Model.JobTitle
                        @if (!string.IsNullOrEmpty(Model.Department))
                        {
                            <span> • @Model.Department</span>
                        }
                    </p>

                    <hr />

                    <form asp-controller="employee_portal"
                          asp-action="upload"
                          asp-route-id="@Model.EmployeeId"
                          method="post"
                          enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div class="input-group input-group-sm">
                            <input type="file" name="photo" class="form-control form-control-sm" />
                            <button class="btn btn-outline-primary btn-sm" type="submit">Upload Photo</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- RIGHT: EDITABLE DETAILS -->
        <div class="col-md-8">
            <form asp-controller="employee_portal"
                  asp-action="update"
                  asp-route-id="@Model.EmployeeId"
                  method="post">
                @Html.AntiForgeryToken()

                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="row g-4">
                            <!-- Personal -->
                            <div class="col-md-6 col-lg-3">
                                <h6 class="fw-bold mb-3">Personal Details</h6>
                                <div class="mb-3">
                                    <label class="form-label">Name</label>
                                    <input class="form-control" value="@Model.FullName" disabled />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Birthday</label>
                                    <input asp-for="Birthday" type="date" class="form-control" />
                                    <span asp-validation-for="Birthday" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Gender</label>
                                    <input asp-for="Gender" class="form-control" />
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Employment -->
                            <div class="col-md-6 col-lg-3">
                                <h6 class="fw-bold mb-3">Employment</h6>
                                <div class="mb-3">
                                    <label class="form-label">Job Title</label>
                                    <input asp-for="JobTitle" class="form-control" />
                                    <span asp-validation-for="JobTitle" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Department</label>
                                    <input asp-for="Department" class="form-control" />
                                    <span asp-validation-for="Department" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Pay Frequency</label>
                                    <input asp-for="PayFrequency" class="form-control" />
                                    <span asp-validation-for="PayFrequency" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Start Date</label>
                                    <input asp-for="StartDate" type="date" class="form-control" />
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Basic Pay</label>
                                    <div class="form-control-plaintext fw-semibold">
                                        @if (Model.BasicPay.HasValue)
                                        {
                                            @Model.BasicPay.Value.ToString("C0")
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </div>
                                </div>
                            </div>

                            <!-- Contact -->
                            <div class="col-md-6 col-lg-3">
                                <h6 class="fw-bold mb-3">Contact</h6>
                                <div class="mb-3">
                                    <label class="form-label">Address</label>
                                    <input asp-for="Address" class="form-control" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Phone</label>
                                    <input asp-for="Phone" class="form-control" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input asp-for="Email" class="form-control" disabled />
                                </div>
                            </div>

                            <!-- Emergency -->
                            <div class="col-md-6 col-lg-3">
                                <h6 class="fw-bold mb-3">Emergency Contact</h6>
                                <div class="mb-3">
                                    <label class="form-label">Name</label>
                                    <input asp-for="EmergencyContactName" class="form-control" />
                                    <span asp-validation-for="EmergencyContactName" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Relationship</label>
                                    <input asp-for="EmergencyContactRelationship" class="form-control" />
                                    <span asp-validation-for="EmergencyContactRelationship" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Phone</label>
                                    <input asp-for="EmergencyContactPhone" class="form-control" />
                                    <span asp-validation-for="EmergencyContactPhone" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input asp-for="EmergencyContactEmail" class="form-control" />
                                    <span asp-validation-for="EmergencyContactEmail" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 d-flex justify-content-end gap-2">
                            <a class="btn btn-outline-secondary" asp-controller="Website" asp-action="Portal">Cancel</a>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
