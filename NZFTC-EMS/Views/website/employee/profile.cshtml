@model NZFTC_EMS.Models.employee_model
@{
    Layout = ViewData["Layout"]?.ToString();
    ViewData["Title"] = "Profile";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

<div class="container py-4">
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["msg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <h3 class="mb-4 fw-bold">Profile</h3>

    <div class="d-flex align-items-center mb-4 gap-3">
        <div style="width:90px;height:90px;border-radius:50%;overflow:hidden;background:#eee;">
            @if (!string.IsNullOrEmpty(Model.photo_path))
            {
                <img src="@Model.photo_path" style="width:100%;height:100%;object-fit:cover;" />
            }
        </div>

        <div>
            <h5 class="mb-1">@Model.full_name</h5>
            <p class="text-muted mb-1">
                @Model.job_title
                @if (!string.IsNullOrEmpty(Model.department))
                {
                    <span> • @Model.department</span>
                }
            </p>

            <form asp-controller="employee_portal"
                  asp-action="upload"
                  asp-route-id="@Model.id"
                  method="post"
                  enctype="multipart/form-data"
                  class="d-flex gap-2">
                <input type="file" name="photo" class="form-control form-control-sm" />
                <button class="btn btn-outline-primary btn-sm" type="submit">Upload Photo</button>
            </form>
        </div>
    </div>

    <form asp-controller="employee_portal"
          asp-action="update"
          asp-route-id="@Model.id"
          method="post">
        @Html.AntiForgeryToken()
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="row g-4">
                    <!-- Personal -->
                    <div class="col-md-6 col-lg-3">
                        <h6 class="fw-bold mb-3">Personal Details</h6>
                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <input class="form-control" value="@Model.full_name" disabled />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Birthday</label>
                            <input asp-for="birthdate" type="date" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Gender</label>
                            <input asp-for="gender" class="form-control" />
                        </div>
                    </div>

                    <!-- Employment -->
                    <div class="col-md-6 col-lg-3">
                        <h6 class="fw-bold mb-3">Employment</h6>
                        <div class="mb-3">
                            <label class="form-label">Job Title</label>
                            <input asp-for="job_title" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Basic Pay</label>
                            <div class="form-control-plaintext fw-semibold">
                                @if (Model.basic_pay.HasValue)
                                {
                                    @Model.basic_pay.Value.ToString("C0")
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Pay Frequency</label>
                            <input asp-for="pay_frequency" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Start Date</label>
                            <input asp-for="start_date" type="date" class="form-control" />
                        </div>
                    </div>

                    <!-- Contact -->
                    <div class="col-md-6 col-lg-3">
                        <h6 class="fw-bold mb-3">Contact Information</h6>
                        <div class="mb-3">
                            <label class="form-label">Address</label>
                            <input asp-for="address" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Phone</label>
                            <input asp-for="phone" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input asp-for="email" class="form-control" disabled />
                        </div>
                    </div>

                    <!-- Emergency -->
                    <div class="col-md-6 col-lg-3">
                        <h6 class="fw-bold mb-3">Emergency Contact</h6>
                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <input asp-for="emergency_contact_name" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Relationship</label>
                            <input asp-for="emergency_contact_relationship" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Phone</label>
                            <input asp-for="emergency_contact_phone" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input asp-for="emergency_contact_email" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-end gap-2">
                    <a class="btn btn-outline-secondary" asp-controller="Website" asp-action="Portal">Cancel</a>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


