@using NZFTC_EMS.Controllers
@model EmployeeProfileEditVm

@{
    Layout = ViewData["Layout"]?.ToString();
    ViewData["Title"] = "Edit Profile";
}

<link rel="stylesheet" href="~/css/portal-StyleSheet.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />

<div class="container mt-5 mb-5">

    <!-- Page header -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <h2 class="fw-bold mb-0">Edit Profile</h2>

        <a class="btn btn-outline-secondary"
           asp-controller="employee_profile"
           asp-action="Profile">
            ← Back to Profile
        </a>
    </div>

    <!-- EDIT FORM CARD -->
    <form asp-controller="employee_profile"
          asp-action="Edit"
          method="post"
          enctype="multipart/form-data"
          class="profile-edit-card p-4">

        @Html.AntiForgeryToken()

        <div class="row g-4">

            <!-- LEFT SIDE -->
            <div class="col-md-6">

                <div class="section-title">Personal Details</div>
                <hr class="section-divider" />

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Phone" class="form-label">Phone</label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label">Address</label>
                    <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ProfilePhoto" class="form-label">Profile Photo</label>
                    <input asp-for="ProfilePhoto" type="file" class="form-control" />
                    <small class="text-muted">Upload a JPEG image. It will replace your current photo.</small>
                </div>

            </div>

            <!-- RIGHT SIDE -->
            <div class="col-md-6">

                <div class="section-title">Emergency Contact</div>
                <hr class="section-divider" />

                <div class="mb-3">
                    <label asp-for="EmergencyName" class="form-label">Name</label>
                    <input asp-for="EmergencyName" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="EmergencyRelationship" class="form-label">Relationship</label>
                    <input asp-for="EmergencyRelationship" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="EmergencyPhone" class="form-label">Phone</label>
                    <input asp-for="EmergencyPhone" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="EmergencyEmail" class="form-label">Email</label>
                    <input asp-for="EmergencyEmail" class="form-control" />
                </div>

            </div>
        </div>

        <div class="mt-4 d-flex gap-2">
            <button type="submit" class="btn btn-primary px-4">Save</button>

            <a asp-controller="employee_profile"
               asp-action="Profile"
               class="btn btn-outline-secondary px-4">
                Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

