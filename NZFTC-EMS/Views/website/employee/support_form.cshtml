@{
    Layout = ViewData["Layout"]?.ToString();
    ViewData["Title"] = "Support / Helpdesk";
}

<link rel="stylesheet" href="~/css/support.css" asp-append-version="true" />

<div class="container py-4">
    <h3 class="fw-bold mb-3">Support / Helpdesk</h3>

    <div class="row g-4">
        <!-- LEFT: create ticket -->
        <div class="col-lg-5">
            <div class="card">
                <div class="card-header fw-semibold">Create a new ticket</div>
                <div class="card-body">
                    <form id="create-form" class="row g-3">
                        @Html.AntiForgeryToken()
                        <div class="col-12">
                            <label class="form-label">Subject</label>
                            <input type="text" name="subject" class="form-control" maxlength="120" required />
                        </div>
                        <div class="col-12">
                            <label class="form-label">Message</label>
                            <textarea name="message" class="form-control" rows="5" maxlength="4000" required></textarea>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Priority</label>
                            <select name="priority" class="form-select">
                                <option value="Low">Low</option>
                                <option value="Medium" selected>Medium</option>
                                <option value="High">High</option>
                                <option value="Urgent">Urgent</option>
                            </select>
                        </div>
                        <div class="col-12 d-flex align-items-center gap-2">
                            <button type="submit" class="btn btn-primary">Submit ticket</button>
                            <span id="create-status" class="small text-muted"></span>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- RIGHT: my tickets + details -->
        <div class="col-lg-7">
            <!-- My tickets -->
            <div class="card mb-3">
                <div class="card-header fw-semibold">My tickets</div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th style="width:3rem;">#</th>
                                <th>Subject</th>
                                <th style="width:7rem;">Status</th>
                                <th style="width:7rem;">Priority</th>
                                <th style="width:11rem;">Created</th>
                            </tr>
                        </thead>
                        <tbody id="ticket-body">
                            <tr>
                                <td colspan="5" class="text-center text-muted py-3">
                                    Loading...
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Ticket details -->
            <div class="card">
                <div class="card-header fw-semibold">Ticket details</div>

                <div class="card-body text-muted" id="detail-empty">
                    Select a ticket from the list to see its details and admin replies.
                </div>

                <div class="card-body d-none" id="detail-body">
                    <div class="mb-2">
                        <h5 id="dt-subject" class="fw-bold mb-1"></h5>
                        <p class="small mb-1">
                            <span class="badge me-1" id="dt-status"></span>
                            <span class="badge" id="dt-priority"></span>
                        </p>
                        <p class="small text-muted mb-0" id="dt-created"></p>
                    </div>

                    <hr />

                    <h6 class="small fw-semibold">Your message</h6>
                    <p id="dt-message"
                       class="small text-body-secondary mb-3"
                       style="white-space:pre-wrap;"></p>

                    <h6 class="small fw-semibold">Conversation</h6>
                    <div id="dt-thread"
                         class="small mb-2"
                         style="max-height:260px; overflow-y:auto; border:1px solid #eee; border-radius:.5rem; padding:.5rem;">
                    </div>

                    <div id="emp-reply-wrapper" class="mt-2">
                        <form id="emp-reply-form" class="d-flex gap-2">
                            <textarea id="emp-reply-body"
                                      class="form-control form-control-sm"
                                      rows="2"
                                      placeholder="Reply to HR..."
                                      style="resize:vertical;"></textarea>
                            <button type="submit" class="btn btn-primary btn-sm">
                                Send
                            </button>
                        </form>
                        <div id="emp-reply-closed" class="small text-muted d-none mt-1">
                            This ticket is closed. Please create a new ticket if you need further assistance.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/support_form.js" asp-append-version="true"></script>
}

