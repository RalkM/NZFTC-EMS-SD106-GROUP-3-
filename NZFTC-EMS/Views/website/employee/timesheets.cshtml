@using NZFTC_EMS.Data.Entities
@model IEnumerable<TimesheetEntry>

@{
    Layout = "~/Views/Shared/_portal.cshtml";
    var from = ViewBag.From as string ?? DateTime.Today.AddDays(-6).ToString("yyyy-MM-dd");
    var to   = ViewBag.To   as string ?? DateTime.Today.ToString("yyyy-MM-dd");
}

<div class="page-container">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">My Timesheets</h2>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <!-- FILTER BAR -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <form asp-controller="employee_timesheet"
                  asp-action="Index"
                  method="get"
                  class="row g-3 align-items-end">

                <div class="col-md-4">
                    <label class="form-label">From</label>
                    <input type="date" name="from" value="@from" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">To</label>
                    <input type="date" name="to" value="@to" class="form-control" />
                </div>
                <div class="col-md-4 text-md-end">
                    <button type="submit" class="btn btn-outline-primary mt-3 mt-md-0">
                        Apply Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- NEW ENTRY FORM -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <h5 class="fw-semibold mb-3">Add Timesheet Entry</h5>

<form action="/employee_timesheets/submit"
      method="post"
      class="row g-3">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger mb-2"></div>


                <div class="col-md-3">
                    <label class="form-label" for="WorkDate">Work Date</label>
                    <input id="WorkDate" name="WorkDate" type="date" class="form-control" />
                </div>


                <div class="col-md-2">
                    <label class="form-label">Start</label>
                    <input name="StartTime" type="time" class="form-control" />
                </div>

                <div class="col-md-2">
                    <label class="form-label">Break Start</label>
                    <input name="BreakStartTime" type="time" class="form-control" />
                </div>

                <div class="col-md-2">
                    <label class="form-label">Break End</label>
                    <input name="BreakEndTime" type="time" class="form-control" />
                </div>

                <div class="col-md-2">
                    <label class="form-label">Finish</label>
                    <input name="FinishTime" type="time" class="form-control" />
                </div>

                <div class="col-md-1 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        Save
                    </button>
                </div>
            </form>

            <small class="text-muted d-block mt-2">
                Note: Total hours are calculated as finish – start minus break.
            </small>
        </div>
    </div>

    <!-- TIMESHEET LIST -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h5 class="fw-semibold mb-3">Entries</h5>

            @if (!Model.Any())
            {
                <p class="text-muted mb-0">No timesheet entries in this period.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle styled-table mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Date</th>
                                <th>Start</th>
                                <th>Break</th>
                                <th>Finish</th>
                                <th class="text-end">Total Hours</th>
                                <th class="text-center">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var t in Model)
                            {
                                string badge;
                                string label;

                                switch (t.Status)
                                {
                                    case TimesheetStatus.Approved:
                                        badge = "bg-success";
                                        label = "Approved";
                                        break;
                                    case TimesheetStatus.Submitted:
                                        badge = "bg-info";
                                        label = "Submitted";
                                        break;
                                    case TimesheetStatus.Rejected:
                                        badge = "bg-danger";
                                        label = "Rejected";
                                        break;
                                    default:
                                        badge = "bg-secondary";
                                        label = "Draft";
                                        break;
                                }

                                <tr>
                                    <td>@t.WorkDate.ToString("dd MMM yyyy")</td>
                                    <td>@t.StartTime.ToString(@"hh\:mm")</td>
                                    <td>@t.BreakStartTime.ToString(@"hh\:mm") – @t.BreakEndTime.ToString(@"hh\:mm")</td>
                                    <td>@t.FinishTime.ToString(@"hh\:mm")</td>
                                    <td class="text-end">@t.TotalHours.ToString("0.##")</td>
                                    <td class="text-center">
                                        <span class="badge @badge px-3">@label</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .page-container {
        max-width: 1150px;
        margin: auto;
    }

    .styled-table th {
        background: #f8f9fa;
        font-weight: 600;
    }

    .styled-table td {
        background: #ffffff;
    }
</style>
